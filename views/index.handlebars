
<img src="assets/img/burger.png" alt="image-burger" id="burger-image">
<br>
<h1>Eat-Da-Burger!</h1>

<h5>Add Your Favorite Burger Below</h5>

<form>
  <div class="create-form" method="post">
  <div class="form-group">
    <label for="burger"></label>
    <textarea class="form-control" id="burger" rows="5" cols="50"></textarea>
  </div class="input-group-prepend">
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br>

{{!-- Unless the burgers have not been devoured --}}
<div class="container section">
    <div class="newly added burger col-md-12">
        <h4 class="burger-header">Get your hot burgers here!</h4>
        <ul class="list-group">
            {{#each burger}}
                {{#if devoured}}
                    {{> burger/burgers-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div><br>
    <div>
        <div class="newly added burger col-md-12">
            <h4 class="burger-header">No more burgers left</h4>
            <ul class="list-group">
                {{#each burger}}
                {{#unless devoured}}
                    {{> burger/burgers-block devoured=true}}
                {{/unless}}
            {{/each}}
            </ul>
            <ul>
        </div>

</div>


